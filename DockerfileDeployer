FROM public.ecr.aws/lambda/dotnet:5.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:5.0-focal AS build
WORKDIR /src
COPY ./src/ ./src/
COPY microapps-core.sln ./
RUN dotnet build src/PwrDrvr.MicroApps.Deployer/PwrDrvr.MicroApps.Deployer.csproj \
  --configuration Release \ 
  --output /app/build

FROM build AS publish
RUN dotnet publish src/PwrDrvr.MicroApps.Deployer/PwrDrvr.MicroApps.Deployer.csproj \
  --configuration Release \ 
  --runtime linux-x64 \
  --self-contained false \ 
  --output /app/publish \
  -p:PublishReadyToRun=true 

FROM base AS final
WORKDIR /var/task
COPY --from=publish /app/publish .
CMD ["PwrDrvr.MicroApps.Deployer::PwrDrvr.MicroApps.Deployer.LambdaEntryPoint::FunctionHandlerAsync"]
