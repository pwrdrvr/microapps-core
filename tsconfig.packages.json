{
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "importHelpers": true,
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules/*", "**/node_modules/*", "**/*.spec.ts", "dist"]
}
