{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "importHelpers": true,
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  }
}