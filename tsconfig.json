{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "module": "commonjs",
    "allowJs": false,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "typeRoots": ["./src/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    {
      "path": "./src/common/microapps-datalib/"
    },
    {
      "path": "./src/microapps-deployer/"
    },
    {
      "path": "./src/microapps-router/"
    },
    {
      "path": "./src/microapps-publish/"
    }
  ],
  "exclude": ["**/node_modules/*", "./src/apigateway-lre-proxy/*", "**/*.spec.ts"]
}
