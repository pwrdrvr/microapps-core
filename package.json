{
  "name": "@pwrdrvr/microapps-core",
  "version": "0.9.3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pwrdrvr/microapps-core.git"
  },
  "author": "PwrDrvr LLC",
  "license": "MIT",
  "homepage": "https://github.com/pwrdrvr/microapps-core#readme",
  "workspaces": [
    "./src/cdk/",
    "./src/common/*",
    "./src/microapps-cdk/",
    "./src/microapps-deployer/",
    "./src/microapps-publish/",
    "./src/microapps-router/"
  ],
  "private": true,
  "scripts": {
    "fixinstall": "mkdir -p ./src/microapps-publish/dist/src/ && touch ./src/microapps-publish/dist/src/index.js",
    "cloc": "cloc --exclude-dir=node_modules,dist,distb,cdk.out --exclude-ext=json .",
    "start:publish": "node src/microapps-publish/dist/src/index.js",
    "start:publish:debug": "ts-node --inspect=5858 --debug-brk --ignore false src/microapps-publish/src/index.ts",
    "build": "tsc --build tsconfig.json",
    "build:publish": "tsc --build tsconfig.publish.json",
    "esbuild:deployer": "esbuild src/microapps-deployer/src/index.ts --bundle --minify --sourcemap --platform=node --target=node14 --external:aws-sdk --outfile=src/cdk/dist/microapps-deployer/index.js",
    "esbuild:router": "esbuild src/microapps-router/src/index.ts --bundle --minify --sourcemap --platform=node --target=node14 --external:aws-sdk --outfile=src/cdk/dist/microapps-router/index.js",
    "build:deployer": "rollup --config rollup.deployer.js",
    "build:router": "rollup --config rollup.router.js && cp src/microapps-router/appFrame.html distb/microapps-router/",
    "test:trash": "start-server-and-test test:dynamodb http-get://localhost:8000/ test:mocha",
    "test:dynamodb": "local-dynamodb",
    "test": "TEST=true AWS_ACCESS_KEY_ID=accessKeyId AWS_SECRET_ACCESS_KEY=secretAccessKey AWS_REGION=mock ts-mocha --require ./src/fixtures.ts --retries 2 --timeout 5000 -p tsconfig.packages.json --ignore ./src/**/node_modules/**/*.spec.ts './src/**/*.spec.ts'",
    "test:dumpdb": "AWS_REGION=mock AWS_ACCESS_KEY_ID=accessKeyId AWS_SECRET_ACCESS_KEY=secretAccessKey  aws dynamodb scan --endpoint-url http://localhost:8000 --region local --table-name MicroApps",
    "lint": "eslint ./ --ext .ts --ext .tsx",
    "lint-and-fix": "eslint ./ --ext .ts --ext .tsx --fix"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/mocha": "^8.2.3",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chai": "^4.3.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.12.14",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "mocha": "^8.3.0",
    "prettier": "^2.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "start-server-and-test": "^1.12.0",
    "strip-json-comments-cli": "^1.0.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  }
}
